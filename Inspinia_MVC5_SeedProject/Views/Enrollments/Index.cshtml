@model IEnumerable<Inspinia_MVC5_SeedProject.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Enrollment & Attendance</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Enrollment</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary btn-xs"})
                    </div>
                </div>

                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cours.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Student.email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.create_date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isPresent)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cours.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.create_date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isPresent)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new {sid = item.student_id, cid = item.course_id}, new {@class = "btn btn-primary btn-sm"})
                                    @Html.ActionLink("Edit", "Edit", new {sid = item.student_id, cid = item.course_id}, new {@class = "btn btn-white btn-sm"})
                                    @Html.ActionLink("Delete", "Delete", new {sid = item.student_id, cid = item.course_id}, new {@class = "btn btn-white btn-sm"})
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>